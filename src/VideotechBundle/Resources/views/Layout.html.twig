{% extends '@Videotech/base.html.twig' %}

{% block stylesheets %}
    {% stylesheets 'bundles/videotech/css/custom.css'  filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% block css %}
    {% endblock %}
{% endblock %}


{% block title %}{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
      <a class="navbar-brand" href="#">{{ site_name }}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	<span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
	<ul class="navbar-nav  mr-auto">
	  <li class="nav-item">
            <a class="nav-link" href="{{ path("videotech_list_category") }}">Categorie</a>
	  </li>
	  <li class="nav-item">
            <a class="nav-link" href="{{ path("videotech_new_film") }}">Ajout film</a>
	  </li>
	</ul>
	<span class="navbar-text" style="padding-right:10px" id="totalFilm" >
	  
	</span>


    	<form class="form-inline my-2 my-lg-0" action="{{ path("videotech_search") }}"  method="post" enctype="multipart/form-data">
      	      <input class="form-control mr-sm-2" type="search" placeholder="Recherche ..." aria-label="Search" id="search" name="search">
      	      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Recherche</button>
    	</form>
      </div>
    </nav>
    
    <div class="container">
	{% block content %}
	{% endblock %}
    </div>

    <footer class="container-fluid text-center">
	<p>Copyright ©2018. Tous droits réservés.</p>
    </footer>

    
{% endblock %}

{% block javascripts %}{% endblock %}
