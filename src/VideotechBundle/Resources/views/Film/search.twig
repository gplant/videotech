{# Load Admin layout #}
{% extends "VideotechBundle::Layout.html.twig" %}

{# Page sub title #}
{% block subTitle %}Search{% endblock %}



{# Main content block #}
{% block content %}
    <h1 class="page-header">Search</h1>


    
    <h3 class="page-header">Film</h3>
    <table class="table table-striped">
      <thead>
	<tr>
	  <th scope="col">#</th>
	  <th scope="col">Titre</th>
	  <th scope="col">Cat√©gorie</th>
	  <th scope="col"></th>
	</tr>
      </thead>
      <tbody>
	{% for film in films %}
	<tr>
	  <th scope="row">{{ loop.index }}</th>
	  <td>{{ film.title }}</td>
	  <td>{{ film.category.name }}</td>
	  <td>
	    <a href="{{ path('videotech_film', {'catName': film.category.name , 'filmName' : film.title , 'filmId' : film.id }) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Voire les films</a>
	  </td>
	</tr>
	{% endfor %}
      </tbody>
    </table>

        <h3 class="page-header">Categori</h3>
    <table class="table table-striped">
      <thead>
	<tr>
	  <th scope="col">#</th>
	  <th scope="col">Nom</th>
	  <th scope="col">Nombre de film</th>
	  <th scope="col"></th>
	</tr>
      </thead>
      <tbody>
	{% for category in categories %}
	<tr>
	  <th scope="row">{{ loop.index }}</th>
	  <td>{{ category.name }}</td>
	  <td>{{ category.films.count }}</td>
	  <td>
	    <a href="{{ path('videotech_category', {'name': category.name}) }}" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Voire les films</a>
	  </td>
	</tr>
	{% endfor %}
      </tbody>
    </table>


    
{% endblock %}

