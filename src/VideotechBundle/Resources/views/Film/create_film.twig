{# Load Admin layout #}
{% extends "VideotechBundle::Layout.html.twig" %}

{# Page sub title #}
{% block subTitle %}SurveyFilm creation{% endblock %}


{# Main content block #}
{% block content %}
    <h1 class="page-header">Film Creation</h1>

    <!-- Main form : Creation of a new categorifilm -->
    
    <form class="form-horizontal" action=""  method="post" enctype="multipart/form-data" id="mainForm">
	<div class="form-group">
	    <label for="title" class="col-sm-2 control-label">Titre : </label>
	    <div class="col-sm-8">
		<input type="text" pattern=".{10,255}" requiered="true" class="form-control" id="title" name="title" placeholder="Titre film">
	    </div>
	</div>
	<div class="form-group">
	    <label for="code" class="col-sm-2 control-label">Code to evaluate : </label>
	    <div class="col-sm-8">
		<input type="file"  requiered="true" id="code" name="code">
	    </div>
	</div>

	<div class="form-group">
	    <label for="categorySelecter" class="col-sm-2 control-label">Category : </label>
	    <div class="col-sm-8">
		<select class="form-control" id="categorySelecter" name="categorySelecter" onchange="verifyCategory(this)">
		    <option value="-1" selected disabled>Merci de séléctioner une categorie</option>
		    <option value="-2">Créer une catégorie</option>
		    {# loop on each element of category #}
		    {% for category in categories %}
			<option value={{category.id}}>{{category.name}}</option>
		    {% endfor %}

		</select>

	    </div>
	</div>
    </form>
    

    <div>
	<button type="submit" form="mainForm" class="btn btn-primary" >Add Film</button>
    </div>




    <!-- Modals -->

    {% include "VideotechBundle:Film:modals/categoryModal.html.twig" %}

    
    <!-- End of Modals -->



    
{% endblock %}

{% block javascripts %}



  
{% endblock %}
